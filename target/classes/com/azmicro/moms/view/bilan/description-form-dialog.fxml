<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.azmicro.moms.controller.bilan.DescriptionFormController"
      prefWidth="550.0" prefHeight="450.0" spacing="15.0" style="-fx-background-color: white;">
   <padding>
      <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
   </padding>
   
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <FontIcon iconColor="#3498db" iconLiteral="fas-flask" iconSize="24" />
            <VBox spacing="2.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Description Rapide"/>
                  <Label fx:id="lblProgress" style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" text="Analyse 1 sur X"/>
               </children>
            </VBox>
         </children>
      </HBox>
      
      <Separator />
      
      <!-- Current Analysis -->
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-background-radius: 5; -fx-padding: 10;">
         <children>
            <FontIcon iconColor="#27ae60" iconLiteral="fas-vial" iconSize="20" />
            <Label fx:id="lblCurrentAnalyse" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Type d'analyse"/>
         </children>
      </HBox>
      
      <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
         <content>
            <VBox spacing="12.0">
               <children>
                  <!-- Description -->
                  <VBox spacing="8.0">
                     <children>
                        <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Description / Indication"/>
                        <TextArea fx:id="txtDescription" promptText="Indication clinique, zone à examiner..." prefRowCount="6"
                                  style="-fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 5;" wrapText="true"/>
                        <TilePane hgap="8.0" vgap="8.0" prefColumns="3">
                           <children>
                              <Button text="Contrôle routine" onAction="#setDescription" style="-fx-background-color: #ecf0f1; -fx-cursor: hand; -fx-padding: 5 10;"/>
                              <Button text="Bilan pré-opératoire" onAction="#setDescription" style="-fx-background-color: #ecf0f1; -fx-cursor: hand; -fx-padding: 5 10;"/>
                              <Button text="Suivi traitement" onAction="#setDescription" style="-fx-background-color: #ecf0f1; -fx-cursor: hand; -fx-padding: 5 10;"/>
                              <Button text="Urgence" onAction="#setDescription" style="-fx-background-color: #ecf0f1; -fx-cursor: hand; -fx-padding: 5 10;"/>
                              <Button text="Dépistage" onAction="#setDescription" style="-fx-background-color: #ecf0f1; -fx-cursor: hand; -fx-padding: 5 10;"/>
                              <Button text="Bilan annuel" onAction="#setDescription" style="-fx-background-color: #ecf0f1; -fx-cursor: hand; -fx-padding: 5 10;"/>
                           </children>
                        </TilePane>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
      
      <!-- Buttons -->
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#handleCancel" 
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 8 20;" 
                    text="Annuler"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnPrevious" mnemonicParsing="false" onAction="#handlePrevious" 
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-cursor: hand; -fx-padding: 8 20;" 
                    text="◄ Précédent" visible="false"/>
            <Button fx:id="btnNext" mnemonicParsing="false" onAction="#handleNext" 
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 20;" 
                    text="Suivant ►"/>
            <Button fx:id="btnFinish" mnemonicParsing="false" onAction="#handleFinish" 
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-padding: 8 20;" 
                    text="✓ Terminer" visible="false"/>
         </children>
      </HBox>
   </children>
</VBox>
