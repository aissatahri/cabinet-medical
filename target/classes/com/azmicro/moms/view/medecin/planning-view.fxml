<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.azmicro.moms.controller.medecin.PlanningController">
    <stylesheets>
        <URL value="@../../css/planning.css" />
    </stylesheets>
   <VBox spacing="10.0" styleClass="agenda-container" stylesheets="@../../css/planning.css" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
         <!-- Barre de sélection de la vue -->
         <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                 <!-- Boutons de sélection de la vue -->
                 <Button fx:id="btnDaily" onAction="#showDailyView" styleClass="view-button" stylesheets="@../../css/planning.css" text="Jour" />
                 <Button fx:id="btnWeekly" onAction="#showWeeklyView" styleClass="view-button" text="Semaine" />
                 <Button fx:id="btnMonthly" onAction="#showMonthlyView" styleClass="view-button" text="Mois" />
            </children>
         </HBox>
         
         <!-- Barre de navigation et affichage de la date -->
         <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                 <!-- Boutons de navigation -->
                 <Button fx:id="btnPrev" onAction="#navigateToPrevious" styleClass="nav-button" stylesheets="@../../css/planning.css" text="&lt; Précédent" />
                 <Label fx:id="lblDate" prefHeight="33.0" prefWidth="200.0" styleClass="date-label" stylesheets="@../../css/planning.css" />
                 <Button fx:id="btnNext" onAction="#navigateToNext" styleClass="nav-button" stylesheets="@../../css/planning.css" text="Suivant &gt;" />
            </children>
         </HBox>
      </children>
   </VBox>

    <!-- Conteneur principal avec ScrollPane -->
    <ScrollPane fx:id="spAgenda" fitToHeight="true" fitToWidth="true" layoutY="115.33333333333333" prefHeight="475.0" prefWidth="780.0" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="115.0">
        <GridPane fx:id="gridAgenda" hgap="5" styleClass="agenda-grid" stylesheets="@../../css/planning.css" vgap="5">
            <!-- Dynamically filled grid -->
        </GridPane>
    </ScrollPane>
</AnchorPane>
