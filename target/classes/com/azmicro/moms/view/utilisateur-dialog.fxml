<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.azmicro.moms.controller.medecin.UtilisateurDialogController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: white;">
    
    <!-- Titre -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <FontIcon iconLiteral="fas-user-cog" iconSize="24" iconColor="#2193b0" />
        <Label fx:id="lblTitre" text="Ajouter un Utilisateur" 
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
    </HBox>
    
    <Separator />
    
    <!-- Formulaire -->
    <GridPane hgap="15" vgap="12">
        <columnConstraints>
            <ColumnConstraints minWidth="150" prefWidth="150" />
            <ColumnConstraints minWidth="300" prefWidth="300" hgrow="ALWAYS" />
        </columnConstraints>
        
        <!-- Nom d'utilisateur -->
        <Label text="Nom d'utilisateur :" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-font-weight: bold;" />
        <TextField fx:id="txtNomUtilisateur" promptText="Entrez le nom d'utilisateur"
                   GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <!-- Mot de passe -->
        <Label text="Mot de passe :" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-font-weight: bold;" />
        <PasswordField fx:id="txtMotDePasse" promptText="Entrez le mot de passe"
                       GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <!-- Confirmer mot de passe -->
        <Label text="Confirmer mot de passe :" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-font-weight: bold;" />
        <PasswordField fx:id="txtConfirmerMotDePasse" promptText="Confirmez le mot de passe"
                       GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <!-- Rôle -->
        <Label text="Rôle :" GridPane.columnIndex="0" GridPane.rowIndex="3"
               style="-fx-font-weight: bold;" />
        <ComboBox fx:id="cbRole" promptText="Sélectionnez un rôle" 
                  GridPane.columnIndex="1" GridPane.rowIndex="3"
                  prefWidth="300" />
        
        <!-- Médecin (visible uniquement si rôle = MEDECIN) -->
        <Label fx:id="lblMedecin" text="Médecin :" GridPane.columnIndex="0" GridPane.rowIndex="4"
               style="-fx-font-weight: bold;" visible="false" managed="false" />
        <ComboBox fx:id="cbMedecin" promptText="Sélectionnez un médecin" 
                  GridPane.columnIndex="1" GridPane.rowIndex="4"
                  prefWidth="300" visible="false" managed="false" />
    </GridPane>
    
    <!-- Message d'erreur -->
    <Label fx:id="lblMessage" wrapText="true" 
           style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" />
    
    <Separator />
    
    <!-- Boutons d'action -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnAnnuler" text="Annuler" onAction="#handleAnnuler"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8 20; -fx-cursor: hand;">
            <graphic>
                <FontIcon iconLiteral="fas-times" iconSize="14" iconColor="white" />
            </graphic>
        </Button>
        <Button fx:id="btnEnregistrer" text="Enregistrer" onAction="#handleEnregistrer"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 8 20; -fx-cursor: hand;">
            <graphic>
                <FontIcon iconLiteral="fas-save" iconSize="14" iconColor="white" />
            </graphic>
        </Button>
    </HBox>
</VBox>
