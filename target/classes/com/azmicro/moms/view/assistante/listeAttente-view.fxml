<?xml version="1.0" encoding="UTF-8"?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.azmicro.moms.controller.assistante.ListeAttenteController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 2);">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="12.0" HBox.hgrow="ALWAYS">
                     <children>
                        <FontIcon iconLiteral="fas-user-clock" iconSize="28" iconColor="#2193b0" />
                        <Label text="Patients en Attente" textFill="#2c3e50">
                           <font>
                              <Font name="Segoe UI Semibold" size="22" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </HBox>
                  
                  <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#logout" styleClass="btn-logout" style="-fx-background-color: transparent; -fx-cursor: hand;">
                     <graphic>
                        <FontIcon iconLiteral="fas-sign-out-alt" iconColor="#e74c3c" iconSize="24" />
                     </graphic>
                     <HBox.margin>
                        <Insets right="15.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </HBox>
            
            <!-- Search and Actions Bar -->
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 6, 0, 0, 2);">
               <children>
                  <!-- Search Box -->
                  <HBox alignment="CENTER_LEFT" spacing="8.0" HBox.hgrow="ALWAYS">
                     <children>
                        <StackPane prefHeight="38.0" prefWidth="350.0" styleClass="search-box">
                           <children>
                              <TextField fx:id="tfKeyword" prefHeight="38.0" promptText="Rechercher un patient..." style="-fx-background-color: #f8f9fa; -fx-background-radius: 20; -fx-border-color: #e0e0e0; -fx-border-radius: 20; -fx-padding: 0 40 0 15;" />
                              <FontIcon iconLiteral="fas-search" iconSize="16" iconColor="#7f8c8d" StackPane.alignment="CENTER_RIGHT">
                                 <StackPane.margin>
                                    <Insets right="15.0" />
                                 </StackPane.margin>
                              </FontIcon>
                           </children>
                        </StackPane>
                     </children>
                  </HBox>
                  
                  <!-- Action Buttons -->
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Button fx:id="btnAccueil" mnemonicParsing="false" onAction="#openAcceuilAssistant" text="Accueil" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10 20; -fx-font-size: 14; -fx-cursor: hand;">
                           <graphic>
                              <FontIcon iconLiteral="fas-home" iconSize="16" iconColor="white" />
                           </graphic>
                        </Button>
                        <Button fx:id="btnPaiement" mnemonicParsing="false" onAction="#openPaiment" text="Paiement" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 10 20; -fx-font-size: 14; -fx-cursor: hand;">
                           <graphic>
                              <FontIcon iconLiteral="fas-money-bill-wave" iconSize="16" iconColor="white" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </HBox>
            
            <!-- Filter Section -->
            <HBox alignment="CENTER_RIGHT" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 6, 0, 0, 2); -fx-padding: 12 20;">
               <children>
                  <Label text="Filtrer par statut:" textFill="#7f8c8d">
                     <font>
                        <Font size="13" />
                     </font>
                  </Label>
                  <CheckBox fx:id="checkedEnAttente" mnemonicParsing="false" text="En attente" styleClass="filter-checkbox" />
                  <CheckBox fx:id="checkedEnConsultation" mnemonicParsing="false" text="En Consultation" styleClass="filter-checkbox" />
                  <CheckBox fx:id="checkedTermine" mnemonicParsing="false" text="Terminé" styleClass="filter-checkbox" />
               </children>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </HBox>
            
            <!-- Table Section -->
            <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 6, 0, 0, 2);" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="patientEnAttentTv" prefHeight="200.0" styleClass="modern-table" style="-fx-background-color: transparent; -fx-background-radius: 8;" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="detailClm" prefWidth="80.0" text="Détails" />
                        <TableColumn fx:id="nomClm" prefWidth="100.0" text="Nom" />
                        <TableColumn fx:id="prenomClm" prefWidth="100.0" text="Prénom" />
                        <TableColumn fx:id="birthClm" prefWidth="120.0" text="Date Naissance" />
                        <TableColumn fx:id="dateConsultationClm" prefWidth="130.0" text="Date Consultation" />
                        <TableColumn fx:id="telephoneClm" prefWidth="110.0" text="Téléphone" />
                        <TableColumn fx:id="adressClm" prefWidth="150.0" text="Adresse" />
                        <TableColumn fx:id="sexeClm" prefWidth="60.0" text="Sexe" />
                        <TableColumn fx:id="etatMaladieClm" prefWidth="120.0" text="État Maladie" />
                        <TableColumn fx:id="etatConsultationClm" prefWidth="130.0" text="État Consultation" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  
                  <!-- Counter -->
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <FontIcon iconLiteral="fas-users" iconSize="16" iconColor="#2193b0" />
                        <Label fx:id="lblCounter" textFill="#2c3e50" styleClass="counter-label">
                           <font>
                              <Font name="Segoe UI Semibold" size="13" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets left="15.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" />
               </VBox.margin>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
