<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f5f7fa;" styleClass="mainFxmlClass" stylesheets="@../../css/dashboardassistante.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.azmicro.moms.controller.assistante.DashboardAssistanteController">
   <children>
      <VBox spacing="2.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: linear-gradient(to right, #3498db, #2193b0); -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 8, 0, 0, 2);">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="12.0" HBox.hgrow="ALWAYS">
                     <children>
                        <FontIcon iconColor="white" iconLiteral="fas-user-nurse" iconSize="20" />
                        <Label fx:id="lblUser" text="Assistante" textFill="white">
                           <font>
                              <Font name="Segoe UI Semibold" size="16" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </HBox>
                  
                  <!-- Date et Heure à droite -->
                  <VBox alignment="CENTER_RIGHT" spacing="2">
                     <children>
                        <HBox alignment="CENTER_RIGHT" spacing="6">
                           <children>
                              <FontIcon iconColor="white" iconLiteral="fas-calendar-alt" iconSize="14" />
                              <Label fx:id="lblDate" style="-fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold;" text="08-12-2025" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" spacing="6">
                           <children>
                              <FontIcon iconColor="white" iconLiteral="fas-clock" iconSize="14" />
                              <Label fx:id="lblTime" style="-fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold;" text="00:30:00" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#logout" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 20; -fx-cursor: hand;">
                     <graphic>
                        <FontIcon iconColor="white" iconLiteral="fas-sign-out-alt" iconSize="20" />
                     </graphic>
                     <HBox.margin>
                        <Insets left="15.0" right="15.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </HBox>
            
            <!-- Cards Statistics Section -->
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <!-- Card 1: Patients Today -->
                  <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                           <children>
                              <StackPane style="-fx-background-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%);" styleClass="stat-icon">
                                 <FontIcon iconColor="#FFD93D" iconLiteral="fas-users" iconSize="24" />
                              </StackPane>
                              <VBox spacing="2">
                                 <children>
                                    <Label styleClass="stat-label" text="Patients aujourd'hui" />
                                    <Label fx:id="lblPatientsToday" styleClass="stat-value" text="0" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Card 2: Waiting Room -->
                  <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                           <children>
                              <StackPane style="-fx-background-color: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);" styleClass="stat-icon">
                                 <FontIcon iconColor="#6EFAFB" iconLiteral="fas-procedures" iconSize="24" />
                              </StackPane>
                              <VBox spacing="2">
                                 <children>
                                    <Label styleClass="stat-label" text="Salle d'attente" />
                                    <Label fx:id="lblWaitingRoom" styleClass="stat-value" text="0" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Card 3: Appointments -->
                  <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                           <children>
                              <StackPane style="-fx-background-color: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);" styleClass="stat-icon">
                                 <FontIcon iconColor="#FFE66D" iconLiteral="fas-calendar-check" iconSize="24" />
                              </StackPane>
                              <VBox spacing="2">
                                 <children>
                                    <Label styleClass="stat-label" text="Rendez-vous" />
                                    <Label fx:id="lblAppointments" styleClass="stat-value" text="0" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </HBox>
            
            <!-- Search and Actions Section -->
            <AnchorPane prefHeight="26.0" prefWidth="600.0">
               <children>
                  <HBox prefHeight="50.0" prefWidth="364.0" styleClass="search-container" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="10.0">
                     <children>
                        <StackPane prefHeight="150.0" prefWidth="350.0" HBox.hgrow="ALWAYS">
                           <children>
                              <TextField fx:id="tfKeyword" prefHeight="40.0" promptText="Rechercher un patient (nom, prénom, téléphone...)" styleClass="modern-search-field" />
                              <HBox alignment="CENTER_RIGHT" spacing="5" StackPane.alignment="CENTER_RIGHT">
                                 <children>
                                    <FontIcon iconColor="#6c757d" iconLiteral="fas-search" iconSize="16" />
                                 </children>
                                 <padding>
                                    <Insets right="15.0" />
                                 </padding>
                              </HBox>
                           </children>
                        </StackPane>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="62.0" prefWidth="511.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Button fx:id="btnOpenFicheNewPatient" mnemonicParsing="false" onAction="#openFicheNewPatient" styleClass="action-button, success-button" text="Nouveau Patient">
                           <graphic>
                              <FontIcon iconLiteral="fas-user-plus" iconSize="16" />
                           </graphic>
                        </Button>
                        <Button fx:id="btnOpenSalleAttente" mnemonicParsing="false" onAction="#openSalleAttente" styleClass="action-button, info-button" text="Salle Attente">
                           <graphic>
                              <FontIcon iconLiteral="fas-procedures" iconSize="16" />
                           </graphic>
                        </Button>
                        <Button fx:id="btnOpenListeRendezVous" mnemonicParsing="false" onAction="#openListeRendezVous" styleClass="action-button, warning-button" text="Rendez-vous">
                           <graphic>
                              <FontIcon iconLiteral="fas-calendar-check" iconSize="16" />
                           </graphic>
                        </Button>
                        <Button fx:id="btnOpenRendezvous" mnemonicParsing="false" onAction="#openRendervous" styleClass="icon-button">
                           <graphic>
                              <FontIcon iconColor="#495057" iconLiteral="fas-calendar-alt" iconSize="20" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
            <AnchorPane VBox.vgrow="ALWAYS">
               <children>
                  <VBox prefHeight="200.0" prefWidth="536.0" styleClass="table-container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="10.0">
                     <children>
                        <Label styleClass="table-title" text="Liste des Patients" />
                        <TableView fx:id="patientsTv" prefHeight="200.0" prefWidth="200.0" styleClass="modern-table" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="actionClm" minWidth="130.0" prefWidth="150.0" text="Actions" />
                              <TableColumn fx:id="dossierClm" prefWidth="75.0" text="N Dossier" />
                              <TableColumn fx:id="nomClm" prefWidth="75.0" text="Nom" />
                              <TableColumn fx:id="prenomClm" prefWidth="63.3333740234375" text="Prénom" />
                              <TableColumn fx:id="birthClm" prefWidth="76.66668701171875" text="Date Naissance" />
                              <TableColumn fx:id="situationFamilialClm" prefWidth="75.0" text="Situation familiale" />
                              <TableColumn fx:id="telephoneClm" prefWidth="54.66668701171875" text="Téléphone" />
                              <TableColumn fx:id="sexeClm" prefWidth="40.0" text="Sexe" />
                              <TableColumn fx:id="ageClm" prefWidth="38.0" text="Age" />
                              <TableColumn fx:id="adresseClm" prefWidth="124.0" text="Adresse" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                           
                        </TableView>
                           <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="8.0" style="-fx-padding: 10 0 5 0; -fx-background-color: #fafbfc; -fx-border-color: #e9ecef; -fx-border-width: 1 0 0 0;">
                              <children>
                                 <Pagination fx:id="patientsPagination" maxPageIndicatorCount="7" pageCount="1" styleClass="assistant-pagination" />
                              </children>
                           </HBox>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
