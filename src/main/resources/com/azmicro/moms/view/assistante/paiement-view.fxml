<?xml version="1.0" encoding="UTF-8"?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f5f7fa;" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.azmicro.moms.controller.assistante.PaiementController">
    <stylesheets>
        <URL value="@../../css/paiement.css" />
    </stylesheets>
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" style="-fx-background-color: linear-gradient(to right, #3498db, #2193b0); -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 8, 0, 0, 2);">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="12.0" HBox.hgrow="ALWAYS">
                     <children>
                        <FontIcon iconColor="white" iconLiteral="fas-money-bill-wave" iconSize="20" />
                        <Label fx:id="lblUser" text="Assistante" textFill="white">
                           <font>
                              <Font name="Segoe UI Semibold" size="16" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </HBox>
                  
                  <!-- Date et Heure à droite -->
                  <VBox alignment="CENTER_RIGHT" spacing="2">
                     <children>
                        <HBox alignment="CENTER_RIGHT" spacing="6">
                           <children>
                              <FontIcon iconColor="white" iconLiteral="fas-calendar-alt" iconSize="14" />
                              <Label fx:id="lblDate" style="-fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold;" text="08-12-2025" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" spacing="6">
                           <children>
                              <FontIcon iconColor="white" iconLiteral="fas-clock" iconSize="14" />
                              <Label fx:id="lblTime" style="-fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold;" text="00:30:00" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#logout" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 20; -fx-cursor: hand;">
                     <graphic>
                        <FontIcon iconColor="white" iconLiteral="fas-sign-out-alt" iconSize="20" />
                     </graphic>
                     <HBox.margin>
                        <Insets left="15.0" right="15.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" top="15.0" />
               </VBox.margin>
            </HBox>
            
            <!-- Statistics Cards -->
            <HBox spacing="15.0" alignment="CENTER">
               <children>
                  <!-- Card 1: Total Today -->
                  <VBox styleClass="payment-stat-card" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                           <children>
                              <StackPane styleClass="payment-icon" style="-fx-background-color: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);">
                                 <FontIcon iconLiteral="fas-dollar-sign" iconSize="24" iconColor="#FFE66D" />
                              </StackPane>
                              <VBox spacing="2">
                                 <children>
                                    <Label text="Total Aujourd'hui" styleClass="payment-label" />
                                    <Label fx:id="lblTodayTotal" text="0 DH" styleClass="payment-value" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Card 2: Pending Payments -->
                  <VBox styleClass="payment-stat-card" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                           <children>
                              <StackPane styleClass="payment-icon" style="-fx-background-color: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                                 <FontIcon iconLiteral="fas-hourglass-half" iconSize="24" iconColor="#6EFAFB" />
                              </StackPane>
                              <VBox spacing="2">
                                 <children>
                                    <Label text="En Attente" styleClass="payment-label" />
                                    <Label fx:id="lblPendingPayments" text="0" styleClass="payment-value" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  
                  <!-- Card 3: Completed Today -->
                  <VBox styleClass="payment-stat-card" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="12">
                           <children>
                              <StackPane styleClass="payment-icon" style="-fx-background-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                 <FontIcon iconLiteral="fas-check-circle" iconSize="24" iconColor="#FFD93D" />
                              </StackPane>
                              <VBox spacing="2">
                                 <children>
                                    <Label text="Payés Aujourd'hui" styleClass="payment-label" />
                                    <Label fx:id="lblCompletedToday" text="0" styleClass="payment-value" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets left="15.0" right="15.0" />
               </VBox.margin>
            </HBox>
            
            <!-- Search and Actions -->
            <AnchorPane prefHeight="34.0" prefWidth="590.0">
               <children>
                  <HBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <HBox prefHeight="50.0" HBox.hgrow="ALWAYS">
                           <children>
                              <StackPane prefHeight="150.0" prefWidth="400.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <TextField fx:id="tfKeyword" prefHeight="40.0" styleClass="payment-search-field" promptText="Rechercher un patient (nom, prénom, dossier...)" />
                                    <HBox alignment="CENTER_RIGHT" spacing="5" StackPane.alignment="CENTER_RIGHT">
                                       <children>
                                          <FontIcon iconLiteral="fas-search" iconSize="16" iconColor="#6c757d" />
                                       </children>
                                       <padding>
                                          <Insets right="15.0" />
                                       </padding>
                                    </HBox>
                                 </children>
                              </StackPane>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" prefHeight="50.0" spacing="10.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Button fx:id="btnAccueil" mnemonicParsing="false" onAction="#openAcceuilAssistant" styleClass="payment-action-button, home-button" text="Accueil">
                                 <graphic>
                                    <FontIcon iconLiteral="fas-home" iconSize="16" />
                                 </graphic>
                              </Button>
                              <Button fx:id="btnSalleAttente" mnemonicParsing="false" onAction="#openSalleAttente" styleClass="payment-action-button, waiting-button" text="Salle Attente">
                                 <graphic>
                                    <FontIcon iconLiteral="fas-procedures" iconSize="16" />
                                 </graphic>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
            
            <!-- Filters Section -->
            <AnchorPane prefHeight="19.0" prefWidth="600.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="50.0" prefWidth="590.0" spacing="12.0" styleClass="payment-filter-container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <FontIcon iconLiteral="fas-filter" iconSize="16" iconColor="#495057" />
                        <Label text="Filtrer par:" style="-fx-font-size: 13px; -fx-font-weight: 600; -fx-text-fill: #495057;" />
                        <RadioButton fx:id="brJour" mnemonicParsing="false" text="Ce jour" styleClass="payment-filter-radio" />
                        <RadioButton fx:id="brSemaine" mnemonicParsing="false" text="Cette semaine" styleClass="payment-filter-radio" />
                        <RadioButton fx:id="brMois" mnemonicParsing="false" text="Ce mois" styleClass="payment-filter-radio" />
                        <RadioButton fx:id="brAll" mnemonicParsing="false" text="Tout" styleClass="payment-filter-radio" />
                     </children>
                  </HBox>
               </children>
            </AnchorPane>
            <AnchorPane VBox.vgrow="ALWAYS">
               <children>
                  <VBox prefHeight="200.0" prefWidth="536.0" styleClass="payment-table-container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Label text="Liste des Paiements" styleClass="payment-table-title" />
                        <TableView fx:id="patientTerminerPaiementTv" prefHeight="200.0" prefWidth="200.0" styleClass="payment-table" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="detailClm" prefWidth="75.0" text="Détails" />
                              <TableColumn fx:id="nomClm" prefWidth="75.0" text="Nom" />
                              <TableColumn fx:id="prenomClm" prefWidth="72.66666412353516" text="Prénom" />
                              <TableColumn fx:id="clmMontant" prefWidth="75.0" text="Montant" />
                              <TableColumn fx:id="clmVersement" prefWidth="75.0" text="Versement" />
                              <TableColumn fx:id="clmReste" prefWidth="75.0" text="Reste" />
                              <TableColumn fx:id="clmModePaiment" prefWidth="75.0" text="Mode Payement" />
                              <TableColumn fx:id="etatConsultationClm" prefWidth="75.0" text="Etat Consultation" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="590.0" spacing="15.0" styleClass="payment-total-section">
                           <children>
                              <HBox alignment="CENTER" spacing="10" styleClass="payment-total-card" HBox.hgrow="ALWAYS">
                                 <children>
                                    <FontIcon iconLiteral="fas-chart-line" iconSize="24" iconColor="#27ae60" />
                                    <Label fx:id="lblTotal" styleClass="payment-total-label" />
                                 </children>
                              </HBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
