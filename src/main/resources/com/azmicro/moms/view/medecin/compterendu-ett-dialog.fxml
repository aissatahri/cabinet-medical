<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" styleClass="root" stylesheets="@../../css/atlantafx-custom.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.azmicro.moms.controller.medecin.CompteRenduETTDialogController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <!-- Header -->
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <FontIcon iconColor="#1976d2" iconLiteral="fas-file-medical" iconSize="24" />
                  <Label text="Compte Rendu - Échocardiographie Transthoracique (ETT)">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            
            <!-- Patient Info -->
            <VBox spacing="5.0">
               <children>
                  <Label fx:id="lblPatientInfo" text="Patient: [Nom Prénom - CIN - Age]">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblDate" text="Date : 11/12/2025">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <!-- TextArea for Report Content -->
            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Compte Rendu de l'Examen :">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="txtCompteRendu" maxHeight="280.0" prefHeight="280.0" promptText="Saisissez le compte rendu de l'échocardiographie transthoracique..." wrapText="true" VBox.vgrow="ALWAYS" />
                  <Label fx:id="lblCharCount" text="0 caractères">
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleAnnuler" styleClass="button-outlined" text="Annuler">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#handleImprimer" styleClass="btn-success" text="Imprimer">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                     <graphic>
                        <FontIcon iconColor="WHITE" iconLiteral="fas-print" iconSize="14" />
                     </graphic>
                  </Button>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
